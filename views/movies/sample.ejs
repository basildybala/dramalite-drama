  <style>
    .cast-image {
        width: 100px;
        height: 125px;
        object-fit: cover;
        border-radius: 4px;
    }
    .new-cas-section{
        padding: 5px;
    }
    .cast-section{
        display: flex;
    }
    .cast-data-section{
        margin-left: 4px;
    }
    .cast-data-section h3{
        margin: 2px 0px;
        padding: 0;
        font-size: 13px;
        font-family: 'Poppins', sans-serif;
        color: #0050C2;
        font-weight: 600px;
    }
    .cast-data-section :nth-child(2){
        margin: 2px 0px;
        padding: 0;
        font-size: 11px;
        font-family: 'Poppins', sans-serif;
        color: #211818;
        font-weight: 600px;
    }
    .cast-data-section :nth-child(3){
        margin: 2px 0px;
        padding: 0;
        font-size: 11px;
        font-family: 'Poppins', sans-serif;
        color: #211818;
        opacity: 0.6;
    }
    .cast-data-section :nth-child(4){
        margin: 2px 0px;
        padding: 0;
        font-size: 11px;
        font-family: 'Poppins', sans-serif;
        color: #211818;
        opacity: 0.6;
    }
</style>
  <body>
    <!-- Google Tag Manager (noscript) ---->
    <!-- <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-5VRBV3N" height="0" width="0"
      style="display:none;visibility:hidden"></iframe></noscript> -->
    <!-- End Google Tag Manager (noscript) -->

    <div class="web-nav-bar">
      <% if(user){%>
      <a href="/" class="logo" style="margin-left: -160px">
        <!-- <img data-src="/images/logo/dramalitelogo.png" alt="Dramalite" class="lazy-photo" srcset=""> -->
        <h2><span>D</span>ramalite</h2>
        <span>.com</span>
      </a>
      <%}else{%>
      <a href="/" class="logo">
        <!-- <img data-src="/images/logo/dramalitelogo.png" alt="Dramalite" class="lazy-photo" srcset=""> -->
        <h2><span>D</span>ramalite</h2>
        <span>.com</span>
      </a>
      <% }%> <% if(user){%>
      <div class="action">
        <div class="profile" onclick="menuToggle();">
          <img data-src="<%= user.profilePic %>" class="lazy-photo" />
        </div>
        <div class="menu">
          <h3><%= user.name %><br /></h3>
          <ul>
            <li>
              <i class="fa fa-user"></i
              ><a href="/user/my-profile">My profile</a>
            </li>
            <li>
              <i class="fa fa-user-pen"></i
              ><a href="/user/edit-profile">Edit profile</a>
            </li>
            <li><i class="fa fa-circle-info"></i><a href="#">Help</a></li>
            <li>
              <i class="fa fa-right-from-bracket"></i
              ><a href="/user/logout">Logout</a>
            </li>
          </ul>
        </div>
      </div>
      <%}else{%>
      <div class="signup">
        <!-- <a href="#"><i class="fa fa-solid fa-user-plus"></i></a> -->
        <a href="/auth/login">Log in</a>
        <a href="/auth/signup">Signup</a>
      </div>
      <% }%>
    </div>
    <div class="search-sec">
      <div class="search-bar">
        <form action="/search-movie" method="post">
          <input
            class="form-control"
            type="text"
            name="search"
            placeholder="Type drama name"
            required
          />
          <button class="search-btn" type="submit">Search</button>
        </form>
      </div>
    </div>

    <!--------------------------------Movies Categories Swipe---------------------->
    <div class="other-sec">
      <div class="nav-bar-sticky">
        <ul>
          <span>Drama</span>
          <div class="nav-swiper">
            <li><a href="/" title="Home Page">Home</a></li>
            <li>
              <a href="/korean-drama" title="Korean Dramas list"
                >Korean Drama</a
              >
            </li>
            <li>
              <a href="/chinese-drama" title="Chinese Dramas list"
                >Chinese Drama</a
              >
            </li>
            <li><a href="#" title="Japanese Drama list">Japanese </a></li>
            <li><a href="#" title="Hollywood Movies Page">Thai</a></li>
            <li><a href="#" title="Other Movies Page">Other</a></li>
          </div>
        </ul>
      </div>
    </div>

    <script>
      function menuToggle() {
        const toggleMenu = document.querySelector(".menu");
        toggleMenu.classList.toggle("active");
      }
    </script>

    <link rel="stylesheet" href="/css/movie.css" />

    <!-------------------CAST SECTION------------------------>
    <div class="other-sec">
      <div class="left-blue-header">
        <h2>Cast</h2>
      </div>

      <div class="new-cas-section">
        <% for(var i=0; i<actors?.length; i++){%>
        <div class="cast-section">
            <a href="/celebs/<%= actors[i].celeblink %>">
                <img src="/<%= actors[i].profilePic %>" alt="<%= actors[i].profilePic %>" srcset="" class="cast-image">
            </a>
            <div class="cast-data-section">
                <a href="/celebs/<%= actors[i].celeblink %>"> <h3><%= actors[i].actorname %></h3></a>
                <p><%= actors[i].actordramaname %></p>
                <p><%= actors[i].actorrole %></p>
                <p><%= actors[i].description %> </p>
            </div>
        </div>
        <% } %>
      </div>
    </div>
  </body>
</html>
